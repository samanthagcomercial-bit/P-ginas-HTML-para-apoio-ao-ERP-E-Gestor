<script>
function extrairCodigos() {
const texto = document.getElementById("entrada").value;
const padrao = /\b\d{5}\b/g;
const encontrados = texto.match(padrao);
const unicos = encontrados ? [...new Set(encontrados)] : [];
const resultado = unicos.length > 0
? unicos.join(", ")
: "Nenhum cÃ³digo de cinco dÃ­gitos encontrado.";
document.getElementById("resultado").innerText = resultado;
}


function limparCampo() {
document.getElementById("entrada").value = "";
document.getElementById("resultado").innerText = "";
}


function copiarResultado() {
const resultado = document.getElementById("resultado").innerText;
if (resultado) {
navigator.clipboard.writeText(resultado)
.then(() => alert("Resultado copiado!"))
.catch(() => alert("Erro ao copiar."));
}
}
</script>
